                                                                                                        </view>

                                                                                                        
                                                                                                </view>
                                                                                                <view class="css  pl-60 ">

                                                                                                
                                                                                                        <view class="css">
                                                                                
                                                                                                                <view class="rus fs-30 fw-400 line-5-start c-word-6">{{pk.approveMessage.text}}</view>
                                                                                                
                                                                                                        </view>    
                                                                                                    
                                                                                                </view>  
                                                                                            </view>
