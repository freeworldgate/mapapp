                    </view>




                </view>
                <view class="h-50"></view>
                <view class="css mr-3vw ml-3vw  ">
                    <block wx:for="{{tips}}" wx:for-index="bindex" wx:for-item="tip" >
                        <view class="{{tipId === tip.id?'rss p-20 b-white c-5 br-20':'rss  p-20'}}" bindtap="selectTip" data-id="{{tip.id}}">
                            <view class="ccs fs-30 fw-700 ">{{bindex + 1}}.</view>
                            <view class="rus line-5-start fs-30 fw-400 " style="flex:1">{{tip.tip}}</view>
                        </view>



