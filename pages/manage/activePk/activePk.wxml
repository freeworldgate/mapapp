                </view>
                <view class="h-250"></view>
            </view>


    
            <view ></view>



            <view></view>
        </view>

        <view wx:else class="rcc">
                    <view class="ccc br-20" >

                                <view class="rcc">
                                    <image class="" style="width:60vw;height:60vw" src="https://fenghao211.oss-cn-beijing.aliyuncs.com/imgback/empty1.png" mode="aspectFit"></image>
                                </view>
                                <view class="rcc fs-40 fw-500 c-10">没有审核榜单</view>
