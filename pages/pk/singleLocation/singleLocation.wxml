            <view class="rcc">
              <view class="css" style="flex:1" bindtap="showText" data-text="{{sign}}">
                <view class="rus fs-30 fw-300 c-4  line-1-start">{{sign}}</view>
              </view>
              <image class="w-30 h-30" mode="aspectFit" src="/images/more.png"></image>
